<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.themelove.androidlearn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />

    <application
        android:name=".base.TLApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppDefault">
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppDefault">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Case.appbar.UI.ToolBarActivity"
            android:theme="@style/AppDefault" />
        <activity
            android:name=".Case.progressbar.ProgressBarTestActivity"
            android:theme="@style/AppDefault"></activity>
        <activity
            android:name=".Case.media.AudioActivity"
            android:theme="@style/AppDefault"></activity>
        <activity android:name=".Case.pagertab.PagerTabStripActivity" />
        <activity android:name=".Case.tablayout.TabLayoutActivity" />
        <activity android:name=".Case.createshortcut.DynamicCreateShortCutActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.CREATE_SHORTCUT" />
            </intent-filter>
        </activity>
        <activity android:name=".Case.linkjump2apppage.LinkJump2AppPageActivity">
            <intent-filter>
                <data android:scheme="themelove"
                      android:host="test"
                      android:path="/case/linkjump2apppage/LinkJump2AppPageActivity"
                      android:port="8080"
                    />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

            </intent-filter>
        </activity>

        <meta-data
            android:name="ThemeLove"
            android:value="${ThemeLoveChannel}" />

    </application>

</manifest>