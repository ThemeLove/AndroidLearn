<resources>



    <style name="AppDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="customTabSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
            <item name="android:textSize">18sp</item>
            <item name="textAllCaps">false</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="WrapContent.WidthMatchParent.RecyclerItem">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">15dp</item>
    </style>

    <style name="WrapContent.WidthMatchParent.RecyclerItem.Foreground">
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


</resources>
